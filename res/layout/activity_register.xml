<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lo_bg1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stx.denglu.RegisterActivity" >

    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="设置用户名"
        android:textColor="#FFFAFA" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_passwd_edit"
        android:layout_below="@+id/login_user_edit"
        android:text="设置密码"
        android:textColor="#FFFAFA" />
    <EditText
        android:id="@+id/login_user_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:background="@drawable/login_rigister"
        android:ems="10"
        android:hint="请输入用户名"
        android:padding="8dp"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_passwd_edit"
        android:layout_below="@+id/login_passwd_edit" >
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_passwd_edit"
        android:layout_alignTop="@+id/radioGroup1" >
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_passwd_edit"
        android:layout_alignTop="@+id/login_passwd_edit"
        android:layout_marginTop="31dp" >
    </RadioGroup>

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:background="@drawable/login_rigister"
        android:ems="10"
        android:hint="请设置密码"
        android:padding="8dp"
        android:password="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/register"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>